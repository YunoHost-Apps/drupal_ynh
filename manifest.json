{
    "name": "Drupal",
    "id": "drupal",
    "packaging_format": 1,
    "description": {
        "en": "Content management framework",
        "fr": "SystÃ¨me de gestion de contenu"
    },
    "version": "9.5.9~ynh1",
    "url": "https://www.drupal.org",
    "upstream": {
        "license": "GPL-2.0-or-later",
        "website": "https://www.drupal.org",
        "admindoc": "https://www.drupal.org/docs/8",
        "code": "https://github.com/drupal/drupal"
    },
    "license": "GPL-2.0-or-later",
    "maintainer": {
        "name": "yalh76"
    },
    "requirements": {
        "yunohost": ">= 11.0.0"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php8.0-fpm",
        "mysql"
    ],
    "arguments": {
        "install": [
            {
                "name": "domain",
                "type": "domain"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/drupal",
                "default": "/drupal"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            },
            {
                "name": "language",
                "type": "string",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": [
                    "fr",
                    "en"
                ],
                "default": "en"
            },
            {
                "name": "admin",
                "type": "user"
            },
            {
                "name": "password",
                "type": "password"
            },
            {
                "name": "install_profil",
                "type": "string",
                "ask": {
                    "en": "Choose the Drupal install profile to use",
                    "fr": "Choisissez le profile d'installation de Drupal"
                },
                "choices": [
                    "minimal",
                    "standard"
                ],
                "default": "standard"
            }
        ]
    }
}
